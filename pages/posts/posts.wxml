<view>
  <swiper circular="{{true}}" vertical="{{false}}" interval="3000" indicator-dots="{{true}}" autoplay="{{true}}">
    <swiper-item>
      <!-- 插槽 -->
      <image src="/images/bestplayers.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/lpl.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/jumpfly.png"></image>
    </swiper-item>
  </swiper>

  <block wx:for="{{postList}}"   wx:key="unique">
  <view data-post-id="{{item.postId}}" bindtap="onGotoDetail" class="post-container">
    <view class="post-author-date">
      <image  class="post-author" src="{{item.avatar}}"></image>
      <text class="post-date">{{item.date}}</text>
    </view>

    <text class="post-title">{{item.title}}</text>

    <image class="post-image" src="{{item.headImgSrc}}"></image>

    <text class="post-content">{{item.content}}</text>

    <view class="post-like">
      <!-- <image class="post-like-image" src="/images/icon/chat.png"></image> -->
      <l-icon class="post-like-image" color="#666" size="28" name="favor"/>
      <text  class="post-like-font" >{{item.collection}}</text>
      <!-- <image class="post-like-image"  src="/images/icon/view.png"></image> -->
      <l-icon class="post-like-image" color="#666" size="32" name="eye"/>
      <text class="post-like-font" >{{item.reading}}</text>
    </view>

  </view>
</block>

</view>